@model Models.Course
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Online Exam System</title>
    <link href="~/App_Data/Images/checkmark.png" rel="icon" type="image/ico" />
    <link href="~/Content/todc-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/popper-utils.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
</head>
<body>
<nav class="navbar navbar-light bg-light">
    <span class="navbar-brand mb-0 h1">Course Information</span>
</nav>
<div class=" col-lg-12">
    <div class="card">
        <div class="card-header card-header-tabs card-header-warning">
            <ul class="nav justify-content-center" data-tabs="tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#basicInfo" data-toggle="tab">
                        Basic Info
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#outline" data-toggle="tab">
                        Outline
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#exams" data-toggle="tab">
                        Exams
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#participants" data-toggle="tab">
                        Participants
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#trainers" data-toggle="tab">
                        Trainers
                    </a>
                </li>
            </ul>
        </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="basicInfo">
                        @Html.ValidationSummary(true, null, htmlAttributes: new { @class = "alert alert-danger" })
                        @if (ViewBag.Message == "Saved")
                        {
                            <div class="alert alert-success" role="alert">
                                Course has been saved succesfully!
                            </div>
                        }
                        <form class="form-horizontal col-lg-12" method="post">
                            <div class="form-group">
                                @Html.LabelFor(c => c.Organization, htmlAttributes: new { @class = "col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(x => Model.OrganizationId, new SelectList(ViewBag.OrganizationList, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Organization, null, htmlAttributes: new { @class = "text-muted text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(c => c.Name, htmlAttributes: new { @class = "col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.Name, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Name, null, htmlAttributes: new { @class = "text-muted text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(c => c.Code, htmlAttributes: new { @class = "col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.Code, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Code, null, htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(c => c.Duration, htmlAttributes: new { @class = "col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.Duration, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Duration, null, htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(c => c.Credit, htmlAttributes: new { @class = "col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.Credit, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Credit, null, htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(c => c.Outline, htmlAttributes: new { @class = "col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(c => c.Outline, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Outline, null, htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(c => c.Fees, htmlAttributes: new { @class = "col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.Fees, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Fees, null, htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                    <input type="submit" value="Update" class="btn btn-success" />
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane" id="outline">

                    </div>
                    <div class="tab-pane" id="exams">

                    </div>
                    <div class="tab-pane" id="participants">

                    </div>
                    <div class="tab-pane" id="trainers">

                    </div>
                </div>
            </div>
    </div>
</div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
